{
  "name": "otz-register-patient-list-template",
  "version": "1.0",
  "tag": "otz-register-patient-list-template",
  "description": "OTZ Register Patient list template",
  "sources": [
    {
      "table": "amrs.person",
      "alias": "t1"
    },
    {
      "table": "amrs.person_name",
      "alias": "person_name",
      "join": {
        "type": "LEFT",
        "joinCondition": "t1.person_id = person_name.person_id AND (person_name.voided IS NULL || person_name.voided = 0) "
      }
    },
    {
      "table": "amrs.patient_identifier",
      "alias": "id",
      "join": {
        "type": "LEFT",
        "joinCondition": "t1.person_id = id.patient_id AND (id.voided IS NULL || id.voided = 0) AND id.identifier_type not in(28,43,45)"
      }
    },
    {
      "table": "amrs.person_attribute",
      "alias": "contacts",
      "join": {
        "type": "LEFT",
        "joinCondition": "t1.person_id = contacts.person_id AND (contacts.voided IS NULL || contacts.voided = 0) AND contacts.person_attribute_type_id in (10, 48)"
      }
    }
  ],
  "columns": [
    {
      "type": "derived_column",
      "alias": "person_name",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": " CONCAT(COALESCE(person_name.given_name, ''), ' ', COALESCE(person_name.middle_name, ''), ' ', COALESCE(person_name.family_name, ''))"
      }
    },
    {
      "type": "derived_column",
      "alias": "firstname_middlename",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": " CONCAT(COALESCE(person_name.given_name, ''), ' ', COALESCE(person_name.middle_name, ''))"
      }
    },
    {
      "type": "derived_column",
      "alias": "last_name",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": " person_name.family_name"
      }
    },
    {
      "type": "simple_column",
      "alias": "gender",
      "column": "t1.gender"
    },
    {
      "type": "derived_column",
      "alias": "identifiers",
      "expressionType": "simple_expression",
      "expressionOptions": {
        "expression": " GROUP_CONCAT(DISTINCT id.identifier SEPARATOR ', ')"
      }
    }
  ],
  "groupBy": {
    "columns": ["t1.person_id"]
  }
}
